#!monit
set logfile /var/log/monit.log

check process home-cleaner with pidfile "/var/run/home-cleaner.pid"
    start program = "/sbin/start home-cleaner"
    stop program  = "/sbin/stop home-cleaner"
    if failed port 8094 protocol HTTP
        request /health
        with timeout 10 seconds
        then restart
